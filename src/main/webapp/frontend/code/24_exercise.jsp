import java.util.*;

class Main{
  public static void main(String args[]){
    int number = 4, result;
    result = factorial(number);
    System.out.println(number + " factorial is: " + result);
  }

  static int factorial( int n ) {
      if (n != 0)  // termination condition
          return n * factorial(n-1); // recursive call
      else
          return 1;
  }
}
